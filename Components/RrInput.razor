@using System.Threading

@if (Visible)
{
    if (!MultiLine)
    {
        InitializeInput();
        <input id="@Id" type="text"
               class="Rr-input"
               placeholder="@Placeholder"
               style="@($"max-width:{MaxWidth}; min-width:{MinWidth};") @Style"
               value="@instantInputText"
               @oninput="OnTextChanged"
               @onclick="@OnInputClick"
               @onkeydown="HandleOnKeyDown"
               spellcheck="false">
    }
    else
    {
        <div style="@($"min-width: {MinWidth}; width: {MultiLineWidth}; height: {MultiLineHeight}; display: flex;")">
            <div class="Rr-textarea-linenumbers-container">
                <pre class="Rr-textarea-linenumbers">@lineNumbers</pre>
            </div>
            <textarea id="@Id"
                      class="Rr-textarea"
                      placeholder="@Placeholder"
                      style="resize: none; @Style; flex-grow: 1; padding-left: 5px;"
                      @oninput="OnTextChanged"
                      @onclick="@OnInputClick"
                      @onkeydown="HandleOnKeyDown"
                      spellcheck="false">@instantInputText
            </textarea>
        </div>
    }
}



